class CursorLogic {

    // current position
    field int x, y;
    // active zone
    field int left_x, left_y;
    field int right_x, right_y;

    constructor CursorLogic new(int x0, int y0, int cnt) {
        let x = x0;
        let y = y0;
        
        let left_x = x0;
        let left_y = y0;

        let right_x = x0 + cnt;
        let right_y = y0 + cnt;
        return this;
    }
    
    // getter
    method int getX() {
        return x;
    }
    // getter
    method int getY() {
        return y;
    }

    method void moveRight() {
        if (x + 1 < right_x) {
            let x = x + 1;
        }
        return;
    }
    
    method void moveLeft() {
        if (x - 1 < left_x) {
            return;
        } else {
            let x = x - 1;
        }
        return;
    }

    method void moveDown() {
        if (y + 1 < right_y) {
            let y = y + 1;
        }
        return;
    }
    
    method void moveUp() {
        if (y - 1 < left_y) {
            return;
        } else {
            let y = y - 1;
        }
        return;
    }
}