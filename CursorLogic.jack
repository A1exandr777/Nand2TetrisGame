class CursorLogic {
    // pointer square
    field int size;
    // current position
    field int x, y;
    // active zone
    field int left_x, left_y;
    field int right_x, right_y;

    constructor CursorLogic new(int x0, int y0, int sz, int cnt) {
        let size = sz;

        let x = x0;
        let y = y0;
        
        let left_x = x0;
        let left_y = y0;

        let right_x = sz * cnt + x0;
        let right_y = sz * cnt + y0;
        return this;
    }
    
    // getter
    method int getX() {
        return x;
    }
    // getter
    method int getY() {
        return y;
    }

    method void moveRight() {
        if (x + size < right_x) {
            let x = x + size;
        }
        return;
    }
    
    method void moveLeft() {
        if (x - size < left_x) {
            return;
        } else {
            let x = x - size;
        }
        return;
    }

    method void moveDown() {
        if (y + size < right_y) {
            let y = y + size;
        }
        return;
    }
    
    method void moveUp() {
        if (y - size < left_y) {
            return;
        } else {
            let y = y - size;
        }
        return;
    }
}