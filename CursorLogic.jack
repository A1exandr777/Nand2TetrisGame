class CursorLogic {
    // pointer square
    field int size;
    // current position
    field int x, y;
    // screen size
    field int w, h;

    constructor CursorLogic new(int sz, int wi, int he) {
        let size = sz;

        let x = 0;
        let y = 0;
        
        let w = wi;
        let h = he;
        return this;
    }
    // getter
    method int getX() {
        return x;
    }
    // getter
    method int getY() {
        return y;
    }

    method void moveRight() {
        if (x + size < w) {
            let x = x + size;
        }
        return;
    }
    
    method void moveLeft() {
        if (x - size < 0) {
            return;
        } else {
            let x = x - size;
        }
        return;
    }

    method void moveDown() {
        if (y + size < h) {
            let y = y + size;
        }
        return;
    }
    
    method void moveUp() {
        if (y - size < 0) {
            return;
        } else {
            let y = y - size;
        }
        return;
    }
}